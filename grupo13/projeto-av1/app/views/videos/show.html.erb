<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col md3">
    <div class="collection">
      <% @videos.each do |video| %>
        <%= link_to video.title, video, :class => 'collection-item' %>
      <% end %>
    </div>
  </div>
  <div class="col m9">
    <div class="card blue-gray darken-1"> 
    <span class="card-title"><center><%= @video.title %></center></span><p>
      <div class="card-image">
        <div id="wistia_<%= @video.wistia %>"></div>
      </div>
      <div class="card-content black-text">
        <p>Descrição: <%= @video.description %></p>
        <p>Video id: <%= @video.wistia %></p>
        <p>Data da publicação: <%= @video.created_at.strftime('%d/%m/%Y') %></p>
        <br>
        <div class="row">
          <div class="col m9">
            <div class="card-panel grey lighten-5 z-depth-1">
              <div class="row valign-wapper">
                <% if @video.id == 1 %>
                  <div class="col m2">
                   <%= image_tag "diego.jpg", class: "circle responsive-img" %>
                  </div>
                 <div class="col m9">
                    <span class="black-text">
                     Autor: Diego Maciel de Amorim<p>
                     Assunto do vídeo: Como levantar uma aplicação ruby no Heroku
                    </span>
                  </div>
                <% elsif @video.id == 2 %>
                  <div class="col m2">
                   <%= image_tag "marcio.jpg", class: "circle responsive-img" %>
                  </div>
                 <div class="col m9">
                    <span class="black-text">
                     Autor: Márcio Mota<p>
                     Assunto do vídeo: Introdução básica ao Heroku
                    </span>
                  </div>
                <% else %>
                <div class="col m2">
                   <%= image_tag "jvt.jpg", class: "circle responsive-img" %>
                  </div>
                 <div class="col m9">
                    <span class="black-text">
                     Autor: João Victor Tavares<p>
                     Assunto do vídeo:
                    </span>
                  </div>
                <% end %>
              </div>
            </div>
          </div> 
        </div>
      </div>
      <div class="card-action">
        <%= link_to "Anterior", @prev_video %>
        <span class="right">
         <%= link_to "Próximo", @next_video if !@next_video.nil? %>
        </span>
      </div>
    </div>
  </div>
</div>

